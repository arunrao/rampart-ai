# AWS Deployment Configuration
# Copy this file to .env and fill in your values
# Then run: source .env && ./deploy.sh

# Stack Configuration
export STACK_NAME="rampart-production"
export AWS_REGION="us-east-1"

# Google OAuth (required)
# Get from: https://console.cloud.google.com/apis/credentials
export GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
export GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Database Configuration (required)
# Choose a strong password (minimum 8 characters)
export DB_PASSWORD="YourSecurePassword123!"

# EC2 Configuration (required)
# Must exist in your AWS region
export KEY_PAIR_NAME="rampart-key"

# Instance Type (optional, defaults to t3.medium)
# Options: t3.small, t3.medium, t3.large
# export INSTANCE_TYPE="t3.medium"

# Domain Name (optional)
# Leave empty if you don't have a domain
export DOMAIN_NAME=""

# Example with domain:
# export DOMAIN_NAME="rampart.yourdomain.com"

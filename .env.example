# Project Rampart - Environment Variables Example
# Copy this file to .env and fill in your values

# ============================================
# Application Settings
# ============================================
APP_NAME=Project Rampart
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# ============================================
# Security Keys (CHANGE THESE!)
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
KEY_ENCRYPTION_SECRET=your-key-encryption-secret-change-in-production

# ============================================
# Database Configuration
# ============================================
# PostgreSQL (Production)
DATABASE_URL=postgresql://rampart:rampart@localhost:5432/rampart

# SQLite (Development)
# DATABASE_URL=sqlite:///./rampart.db

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# LLM Provider API Keys
# ============================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# ============================================
# Security Settings
# ============================================
# Content Filtering
MAX_TOKEN_LIMIT=4096
ENABLE_PII_DETECTION=true
ENABLE_TOXICITY_DETECTION=true
TOXICITY_THRESHOLD=0.7

# Observability
ENABLE_TRACING=true
ENABLE_METRICS=true
TRACE_SAMPLE_RATE=1.0

# Policy Engine
DEFAULT_POLICY_MODE=monitor
ENABLE_AUTO_REMEDIATION=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins for CORS
# Development default: http://localhost:3000,http://localhost:3001
# Production example: https://rampart-ai.vercel.app,https://app.example.com
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# Frontend Configuration
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# ============================================
# Optional: External Services
# ============================================
# Sentry (Error Tracking)
# SENTRY_DSN=your-sentry-dsn

# Prometheus (Metrics)
# PROMETHEUS_ENABLED=true
# PROMETHEUS_PORT=9090

# Slack (Alerts)
# SLACK_WEBHOOK_URL=your-slack-webhook-url

# Email (Notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
